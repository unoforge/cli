{
  "name": "flexi-cli",
  "version": "0.0.5",
  "description": "A CLI tool for rapidly scaffolding Web applications using Flexiwind or UnoUI",
  "type": "module",
  "bin": {
    "flexi-cli": "./dist/index.cjs"
  },
  "files": [
    "dist",
    "readme.md",
    "stubs",
    "package.json"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "pub:beta": "npm run build && npm publish --no-git-checks --access public --tag beta",
    "pub:next": "npm run build && npm publish --no-git-checks --access public --tag next",
    "pub:release": "npm run build && npm publish --access public"
  },
  "keywords": [
    "cli",
    "development",
    "tools",
    "flexi"
  ],
  "author": "Johnkat MJ",
  "repository": {
    "type": "git",
    "url": "https://github.com/unoforge/cli.git",
    "directory": "packages/flexi-cli"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "24.5.2",
    "@types/prompts": "^2.4.9",
    "rimraf": "6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "kleur": "^4.1.5",
    "prompts": "^2.4.2",
    "string_decoder": "^1.3.0",
    "zod": "^4.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
